<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h1>Detail Contact</h1>
            <% if (!contact) { %>
            <div class="alert alert-danger" role="alert">
                Contact tidak ditemukan.<a href="/contact" class="alert-link">&laquo; Back</a>
            </div>
            <% } else { %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= contact.name %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= contact.name %></h6>
                    <p class="card-text"><%= contact.email %></p>
                    <a href="/contact/edit/<%= contact.name %>" class="btn btn-warning badge"><i class="bi bi-pencil-square"></i> Edit</a>
                    <a href="/contact/delete/<%= contact.name %>" class="btn btn-danger badge" onclick="return confirm('Apakah Anda Yakin?')"><i class="bi bi-trash"></i> Delete</a>
                    <a href="/contact" class="card-link d-block mt-3">&laquo; Back</a>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>

<!-- note -->
<!-- btn badger supaya tombolnya tidak terlalu besar
  -->