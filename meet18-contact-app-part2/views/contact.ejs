<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h2>Daftar Contact</h2>
            <a href="/contact/add" class="btn btn-primary mb-2">Add</a>
            <% if (msg.length != 0) { %>
             <div class="alert alert-success" role="alert"><%= msg %></div>
            <% } %>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Nama</th>
                        <th scope="col">No HP</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (contacts.length === 0) { %>
                    <tr>
                        <td colspan="4">
                            <div class="fst-italic text-center">Data Contact Kosong</div>
                        </td>
                    </tr>
                    <% }  else { %>
                    <% let no = 1 %>
                    <% contacts.forEach(contact => { %>
                    <tr>
                        <th scope=" row"><%= no++  %></th>
                        <td><%= contact.name %></td>
                        <td><%= contact.noHP  %></td>
                        <td>
                            <a href="/contact/<%= contact.name %>" class="btn btn-success badge rounded-pill"><i
                                    class="bi bi-info-circle"></i> Detail</a>
                        </td>
                    </tr>
                    <% }) %>
                    <% }%>
                </tbody>
            </table>
        </div>
    </div>
</div>